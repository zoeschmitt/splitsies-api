{
  "lint": {
    "include": ["supabase/", "test/"],
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-explicit-any"]
    }
  },
  "importMap": "./supabase/functions/import_map.json",
  "tasks": {
    "deploy": "supabase functions deploy --import-map ./supabase/functions/import_map.json && supabase secrets set --env-file prod.env",
    "local": "supabase start && supabase functions serve --no-verify-jwt --env-file .env --import-map ./supabase/functions/import_map.json",
    "dbReset": "supabase db reset",
    "dbUpdate": "supabase migrations up",
    "secrets": "supabase secrets set --env-file prod.env"
  }
}
